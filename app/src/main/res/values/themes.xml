<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BirthdayTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_purple</item>
        <item name="colorPrimaryVariant">@color/mid_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mid_purple</item>
        <item name="colorSecondaryVariant">@color/light_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BirthdayTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BirthdayTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BirthdayTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat_bold</item>
    </style>

    <style name="HeadingFontStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat_bold</item>
        <item name="android:textColor">@color/steel_blue</item>
    </style>

    <style name="SubHeadingFontStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/montserrat_bold</item>
        <item name="android:textColor">@color/mid_pink</item>
    </style>

    <style name="MainFontStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/open_sans</item>
        <item name="android:textColor">@color/steel_blue</item>
    </style>

    <style name="ButtonFontStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/open_sans_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="spinnerItemSetNumber" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/steel_blue</item>
    </style>

    <style name="spinnerItemSetUnits" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/steel_blue</item>
    </style>

    <style name="LinkFontStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mid_purple</item>
    </style>
</resources>